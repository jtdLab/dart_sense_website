---
import i18next from "i18next";
import { t } from 'i18next';
import { HeadHrefLangs } from 'astro-i18next/components';
import '@fontsource/inter';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/800.css';
import '@fontsource/inter/900.css';
---

<!doctype html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="VoicePlay for Steel Darts" />
    <meta property="og:description" content="VoicePlay for Steel Darts" />
    <meta property="og:image" content="/open-graph.png" />
    <meta property="og:url" content="https://dartsense.com" />
    <meta name="twitter:image" content="/open-graph.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="canonical" href="https://dartsense.com" />
    <title>{t('site.title')}</title>
    <HeadHrefLangs />
  </head>
  <body>
    <slot />
    <style is:global>
      html {
        font-family: Inter;
        background-color: #26272b;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
