---
import { LanguageSelector } from "astro-i18next/components";
import { t, changeLanguage } from "i18next";
import { Divider } from "../../components/Divider";
import { FAQ } from "../../components/FAQ.jsx";
import { Footer } from "../../components/Footer.jsx";
import { Hero } from "../../components/Hero.jsx";
import { Navbar } from "../../components/Navbar.jsx";
import { NewsLetter } from "../../components/NewsLetter.jsx";
import { Pricing } from "../../components/Pricing.jsx";
import { ProductsDartSense } from "../../components/ProductsDartSense";
import { ScrollToTopButton } from "../../components/ScrollToTopButton";
import { Team } from "../../components/Team.jsx";
import { config } from "../../config";
import MainLayout from "../../layouts/MainLayout.astro";
import "../../styles/Shapes.css";
import "../../styles/Theme.css";

changeLanguage("de");

const links = [
    { label: "Home", href: "#home", ariaLabel: "Home" },
    // { label: 'App', href: '#app', ariaLabel: 'App' },
    // { label: 'VoicePlay', href: '#voice-play', ariaLabel: 'VoicePlay' },
    // { label: "Pricing", href: "#pricing", ariaLabel: "Pricing" },
    // { label: 'Team', href: '#team', ariaLabel: 'Team' },
    // { label: "Newsletter", href: "#newsletter", ariaLabel: "Newsletter" },
    { label: "FAQ", href: "#faq", ariaLabel: "FAQ" },
];
const voicePlayTitle = t("voicePlay.title");
const voicePlaySlogan = t("voicePlay.slogan");
const voicePlayBullet1 = t("voicePlay.bullet1");
const voicePlayBullet2 = t("voicePlay.bullet2");
const voicePlayBullet3 = t("voicePlay.bullet3");
const faqs = [
    {
        question: t("faqs.0.question"),
        answer: t("faqs.0.answer"),
    },
    {
        question: t("faqs.1.question"),
        answer: t("faqs.1.answer"),
    },
    {
        question: t("faqs.2.question"),
        answer: t("faqs.2.answer"),
    },
    {
        question: t("faqs.3.question"),
        answer: t("faqs.3.answer"),
    },
    {
        question: t("faqs.4.question"),
        answer: t("faqs.4.answer"),
    },
    {
        question: t("faqs.5.question"),
        answer: t("faqs.5.answer"),
    },
];
const forAdditionalQuestions = t("faq.forAdditionalQuestions");
const askUsOnDiscord = t("faq.askUsOnDiscord");
const footerSlogan = t("footer.slogan");
const companySection = t("footer.companySection");
const companySectionContactUs = t("footer.companySectionContactUs");
const legalSection = t("footer.legalSection");
const legalSectionImprint = t("footer.legalSectionImprint");
---

<MainLayout title={config.app}>
  <Navbar links={links} client:load>
    <LanguageSelector
      languageMapping={{ en: 'EN', de: 'DE' }}
      showFlag={false}
      class="navbar-link appearance-none bg-dartsenseBg1 lg:bg-dartsenseBgTransparent text-white px-3 py-2 rounded-md focus:outline-none"
      slot="languageSelector"
    />
  </Navbar>
  <Hero client:load />
  <ProductsDartSense
    title={voicePlayTitle}
    slogan={voicePlaySlogan}
    bullet1={voicePlayBullet1}
    bullet2={voicePlayBullet2}
    bullet3={voicePlayBullet3}
    client:load
  />
  <!-- <PromoVideo client:load /> -->
  <!-- <Divider /> -->
  <!-- <Pricing client:load /> -->
  <!-- <Team client:load /> -->
  <!-- <NewsLetter client:load /> -->
  <FAQ
    faqs={faqs}
    forAdditionalQuestions={forAdditionalQuestions}
    askUsOnDiscord={askUsOnDiscord}
    client:load
  />
  <Footer
    slogan={footerSlogan}
    companySection={companySection}
    companySectionContactUs={companySectionContactUs}
    legalSection={legalSection}
    legalSectionImprint={legalSectionImprint}
  />
  <ScrollToTopButton client:load />
</MainLayout>
