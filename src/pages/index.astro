---
import { LanguageSelector } from 'astro-i18next/components';
import i18next, { changeLanguage } from 'i18next';
import completeGameWon from '../assets/images/de/complete_game_won.png';
import createGameDartbotVoicePlay from '../assets/images/de/create_game_dartbot_voice_play.png';
import gameDetails2Player from '../assets/images/de/game_details_2_player.png';
import gameDetailsCompareAverage2Players from '../assets/images/de/game_details_compare_average_2_player.png';
import practiceOverview from '../assets/images/de/practice_overview.png';
import inGameDartbotVoicePlay from '../assets/images/de/in_game_dartbot_voice_play.png';
import inGameDartbot from '../assets/images/de/in_game_dartbot.png';
import start from '../assets/images/de/start.png';
import stats1 from '../assets/images/de/stats_1.png';
import { Divider } from '../components/Divider.jsx';
import { FAQ } from '../components/FAQ.jsx';
import { Footer } from '../components/Footer.jsx';
import { Hero } from '../components/Hero.jsx';
import { Navbar } from '../components/Navbar.jsx';
import { ProductsDartSense } from '../components/ProductsDartSense.jsx';
import { PromoSlides } from '../components/PromoSlides.jsx';
import { ScrollToTopButton } from '../components/ScrollToTopButton.jsx';
import { config } from '../config.js';
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/Shapes.css';
import '../styles/Theme.css';

changeLanguage('de');

const links = [
  { label: 'Home', href: '#home', ariaLabel: 'Home' },
  // { label: 'App', href: '#app', ariaLabel: 'App' },
  // { label: 'VoicePlay', href: '#voice-play', ariaLabel: 'VoicePlay' },
  // { label: "Pricing", href: "#pricing", ariaLabel: "Pricing" },
  // { label: 'Team', href: '#team', ariaLabel: 'Team' },
  // { label: "Newsletter", href: "#newsletter", ariaLabel: "Newsletter" },
  { label: 'FAQ', href: '#faq', ariaLabel: 'FAQ' },
];
const voicePlayTitle = i18next.t('voicePlay.title');
const voicePlaySlogan = i18next.t('voicePlay.slogan');
const voicePlayBullet1 = i18next.t('voicePlay.bullet1');
const voicePlayBullet2 = i18next.t('voicePlay.bullet2');
const voicePlayBullet3 = i18next.t('voicePlay.bullet3');
const promoSlidesTitle = i18next.t('promoSlides.title');
const promoSlidesImages = [
  start.src,
  createGameDartbotVoicePlay.src,
  inGameDartbotVoicePlay.src,
  inGameDartbot.src,
  gameDetails2Player.src,
  stats1.src,
];
const faqs = [
  {
    question: i18next.t('faqs.0.question'),
    answer: i18next.t('faqs.0.answer'),
  },
  {
    question: i18next.t('faqs.1.question'),
    answer: i18next.t('faqs.1.answer'),
  },
  {
    question: i18next.t('faqs.2.question'),
    answer: i18next.t('faqs.2.answer'),
  },
  {
    question: i18next.t('faqs.3.question'),
    answer: i18next.t('faqs.3.answer'),
  },
  {
    question: i18next.t('faqs.4.question'),
    answer: i18next.t('faqs.4.answer'),
  },
  {
    question: i18next.t('faqs.5.question'),
    answer: i18next.t('faqs.5.answer'),
  },
  {
    question: i18next.t('faqs.6.question'),
    answer: i18next.t('faqs.6.answer'),
  },
];
const forAdditionalQuestions = i18next.t('faq.forAdditionalQuestions');
const askUsOnDiscord = i18next.t('faq.askUsOnDiscord');
const footerSlogan = i18next.t('footer.slogan');
const companySection = i18next.t('footer.companySection');
const companySectionContactUs = i18next.t('footer.companySectionContactUs');
const legalSection = i18next.t('footer.legalSection');
const legalSectionImprint = i18next.t('footer.legalSectionImprint');
const legalSectionTerms = i18next.t('footer.legalSectionTerms');
const legalSectionPrivacy = i18next.t('footer.legalSectionPrivacy');
---

<MainLayout title={config.app}>
  <Navbar linkGoToHome="/" links={links} client:load>
    <LanguageSelector
      languageMapping={{ en: 'EN', de: 'DE' }}
      showFlag={false}
      class="navbar-link appearance-none bg-dartsenseBg1 lg:bg-dartsenseBgTransparent text-white px-3 py-2 rounded-md focus:outline-none"
      slot="languageSelector"
    />
  </Navbar>
  <Hero client:load />
  <ProductsDartSense
    title={voicePlayTitle}
    slogan={voicePlaySlogan}
    bullet1={voicePlayBullet1}
    bullet2={voicePlayBullet2}
    bullet3={voicePlayBullet3}
    image={inGameDartbotVoicePlay.src}
    client:load
  />
  <!-- https://github.com/withastro/astro/issues/6334 -->
  <PromoSlides
    title={promoSlidesTitle}
    images={promoSlidesImages}
    client:only="react"
  />
  <Divider />
  <!-- <Pricing client:load /> -->
  <!-- <Team client:load /> -->
  <!-- <NewsLetter client:load /> -->
  <FAQ
    faqs={faqs}
    forAdditionalQuestions={forAdditionalQuestions}
    askUsOnDiscord={askUsOnDiscord}
    client:load
  />
  <Footer
    slogan={footerSlogan}
    companySection={companySection}
    companySectionContactUs={companySectionContactUs}
    legalSection={legalSection}
    legalSectionImprint={legalSectionImprint}
    legalSectionTerms={legalSectionTerms}
    legalSectionPrivacy={legalSectionPrivacy}
    linkGoToImprint="/imprint"
    linkGoToTerms="/terms"
    linkGoToPrivacy="/privacy"
  />
  <ScrollToTopButton client:load />
</MainLayout>
